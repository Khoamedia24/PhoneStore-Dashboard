@{
    Layout = null;
    ViewData["Title"] = " Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />    <style>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />    <style>
        .sidebar::-webkit-scrollbar { width: 6px; }
        .sidebar::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 3px; }
        .soft-ui-shadow { box-shadow: 0 4px 24px 0 rgba(0,0,0,0.05), 0 1.5px 4px 0 rgba(0,0,0,0.03); }
        .soft-ui-gradient { background: linear-gradient(90deg, #ec4899 0%, #6366f1 100%); }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-gray-100 min-h-screen flex">
    <!-- Sidebar -->
    <aside class="sidebar w-72 bg-white soft-ui-shadow flex flex-col h-screen sticky top-0 z-30 px-4 pt-6 pb-4">
        <div class="flex items-center mb-8">
            <img src="~/assets/img/logos/d184c32b-9410-4627-881c-e3db80456315.jpg" class="w-8 h-8 mr-2" alt="logo" />
            <span class="text-lg font-bold text-gray-700 tracking-wide">Admin Dashboard</span>
        </div>
        <nav class="flex-1 overflow-y-auto">
            <ul class="space-y-2">                <li>
                    <a href="/Dashboard/Index" class="flex items-center px-4 py-3 rounded-xl font-semibold text-sm soft-ui-gradient text-white shadow-md mb-2">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M13 5v6h6m-6 0v6m0 0H7m6 0h6"></path></svg>
                        Tổng quan
                    </a>
                </li><li>
                    <a href="/Product/Index" class="flex items-center px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 font-semibold text-sm">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect width="20" height="8" x="2" y="8" rx="2"/><path d="M6 8V6a2 2 0 012-2h8a2 2 0 012 2v2"/></svg>
                        Quản lý sản phẩm
                    </a>
                </li>                <li>
                    <a href="/Category/Index" class="flex items-center px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 font-semibold text-sm">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M4 6h16M4 10h16M4 14h16M4 18h16"/></svg>
                        Quản lý danh mục
                    </a>
                </li>
                <li>
                    <a href="/Color/Index" class="flex items-center px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 font-semibold text-sm">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h10a2 2 0 012 2v12a4 4 0 01-4 4H7z"/><path d="M18 9v9a4 4 0 01-4 4H7a4 4 0 01-4-4V9m18 0L9 3v18"/></svg>
                        Quản lý màu sắc
                    </a>
                </li>
                <li>
                    <a href="/Discount/Index" class="flex items-center px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 font-semibold text-sm">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 8v13m0 0l-4-4m4 4l4-4M12 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                        Quản lý giảm giá
                    </a>
                </li>                <li>
                    <a href="/Order/Index" class="flex items-center px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 font-semibold text-sm">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M21 12.79A9 9 0 1111.21 3h.02A9 9 0 0121 12.79z"/></svg>
                        Quản lý đơn hàng
                    </a>
                </li>                <li>
                    <a href="/Customer/Index" class="flex items-center px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 font-semibold text-sm">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect width="20" height="14" x="2" y="5" rx="2"/><path d="M2 10h20"/></svg>
                        Quản lý khách hàng
                    </a>
                </li>
                <li>
                    <a href="/Membership/Index" class="flex items-center px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 font-semibold text-sm">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="m22 21-3-3m0 0-3-3m3 3 3-3m-3 3-3 3"></path></svg>
                        Quản lý gói thành viên
                    </a>
                </li>
                <li>
                    <a href="/Coupon/Index" class="flex items-center px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 font-semibold text-sm">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M16.5 3.5a2.12 2.12 0 0 1 3 3L7 19l-4 1 1-4Z"/><path d="M13.5 6.5l3 3"/></svg>
                        Quản lý Coupon
                    </a>
                </li>
                <li>
                    <a href="/AdminAccount/Index" class="flex items-center px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 font-semibold text-sm">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/></svg>
                        Quản lý tài khoản
                    </a>
                </li>                <li>
                    <a href="/Report/Revenue" class="flex items-center px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 font-semibold text-sm">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/></svg>
                        Báo cáo doanh thu
                    </a>
                </li>
                <li>
                    <a href="/Role/Index" class="flex items-center px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 font-semibold text-sm">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M16 7a4 4 0 01.88 7.9M12 3v1m0 16v1m8.66-13.66l-.7.7M4.34 19.66l-.7.7M21 12h-1M4 12H3m16.66 7.66l-.7-.7M4.34 4.34l-.7-.7"/></svg>
                        Quản lý phân quyền
                    </a>
                </li>
            </ul>
            <div class="mt-8 mb-2 text-xs font-bold text-gray-400 uppercase tracking-wider">Tài khoản</div>            <ul class="space-y-2">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <li>
                        <a href="/AdminAccount/Profile" class="flex items-center px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 font-semibold text-sm">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/></svg>
                            Thông tin cá nhân
                        </a>
                    </li>
                }
                @if (User.Identity == null || !User.Identity.IsAuthenticated)
                {
                    <li>
                        <a href="/AdminAccount/Login" class="flex items-center px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 font-semibold text-sm">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M15 12H3m0 0l4-4m-4 4l4 4"/></svg>
                            Đăng nhập
                        </a>
                    </li>
                    <li>
                        <a href="/AdminAccount/Register" class="flex items-center px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 font-semibold text-sm">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 4v16m8-8H4"/></svg>
                            Đăng ký
                        </a>
                    </li>
                }                else
                {
                    <li>
                        <form asp-controller="AdminAccount" asp-action="Logout" method="post" class="inline">
                            <button type="submit" class="flex items-center px-4 py-3 rounded-xl text-gray-700 hover:bg-gray-100 font-semibold text-sm w-full text-left">
                                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/></svg>
                                Đăng xuất
                            </button>
                        </form>
                    </li>
                }
            </ul>
            <div class="mt-8">
                <div class="rounded-xl bg-gradient-to-br from-blue-100 to-purple-100 p-4 flex flex-col items-center">
                    <div class="bg-white rounded-full p-2 mb-2 shadow">
                        <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 8v4l3 3"/></svg>
                    </div>
                    <div class="text-gray-700 font-semibold mb-2">Bạn cần hỗ trợ?<br/><span class="text-xs font-normal">Liên hệ quản trị viên</span></div>
                    <a href="#" class="w-full mt-2 bg-white text-blue-600 font-bold py-2 rounded-lg shadow text-center text-xs">LIÊN HỆ</a>
                </div>
            </div>
        </nav>
    </aside>
    <!-- Main Content -->
    <div class="flex-1 flex flex-col min-h-screen">
        <!-- Navbar -->
        <header class="bg-white shadow flex items-center h-16 px-6">
            <div class="flex-1">
                <h1 class="text-xl font-semibold text-gray-800">@ViewData["Title"]</h1>
            </div>
            <div class="flex items-center space-x-4">
                <span class="text-gray-600 font-medium">Xin chào, Admin</span>
                <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="avatar" class="w-9 h-9 rounded-full border-2 border-blue-500" />
            </div>
        </header>
        <!-- Page Content -->
        <main class="flex-1 p-8 bg-gray-100">
            @RenderBody()
        </main>
    </div>
</div>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
